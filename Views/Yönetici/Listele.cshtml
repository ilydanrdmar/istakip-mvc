
@{
    ViewData["Title"] = "Listele";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
}

<div class="container mt-5"> 
   
        <div class="mb-3">
           <h3>@ViewBag.personel.PersonelAdSoyad</h3> 
        </div>

          @foreach (var i in ViewBag.isler)
            {
              <div class="card">
                  <div class="card-header bg-black text center text-black">
                      @i.IsBaslık

                  </div>
                  <div class="card-body">
                      <ul class="list group list-group-flush"> 
                          <li class="list-group-item">@i.IsAcıklama</li>
                          <li class="list-group-item"> Baslangic Tarih : @i.BaslangicTarih </li>
                          <li class="list-group-item"> Bitis Tarih:  @i.BitisTarih</li>
                          <li class="list-group-item"> Durumu:  @i.IsDurumId</li>
                          
                          

                      </ul>
                  </div>


                </div>
            }
</div>
